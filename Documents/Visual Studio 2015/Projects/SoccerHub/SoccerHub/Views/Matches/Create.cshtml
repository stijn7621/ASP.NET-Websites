@model SoccerHub.ViewModels.MatchFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Match</h2>
@using (Html.BeginForm("Create", "Matches"))
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m=>m.Stadium,"Stadium")
        @Html.TextBoxFor(m => m.Stadium, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Stadium)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 31-10-2018" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HomeTeam,"Home Team")
        @Html.DropDownListFor(m => m.HomeTeam, new SelectList(Model.Clubs, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.HomeTeam)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OutTeam, "Out Team")
        @Html.DropDownListFor(m => m.OutTeam, new SelectList(Model.Clubs, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OutTeam)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
