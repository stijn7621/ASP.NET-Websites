@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DatumTijd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Omschrijving)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForumStatus)
        </td>
